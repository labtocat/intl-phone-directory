{
  "name": "intl-phone-directory",
  "version": "0.0.2",
  "description": "International Phone Directory, which contains info about country code, validation etc..",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/labtocat/intl-phone-directory.git"
  },
  "lint-staged": {
    "*.{ts,tsx}": "tslint -c tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "keywords": [
    "intl-phone",
    "phone-number-validation",
    "typescript"
  ],
  "author": "Sachin Philip Mathew <me@imsach.in>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/labtocat/intl-phone-directory/issues"
  },
  "homepage": "https://github.com/labtocat/intl-phone-directory#readme",
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
